<%= render 'navigation/homes' %>
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Grand Opening Day Sale</h1>
          <p class="lead text-muted">In honor of our upcoming website release we are offering a special sale to our existing and all new customers. Click below to sign up to be notified of opening day</p>
          <p>
            <a href="/webusers/new" class="btn btn-primary my-2">Sign up</a>
            <a href="/homes/about" class="btn btn-secondary my-2">More Information</a>
          </p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">

         <div class="row">
          <% Page.find_each do |p| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-img-top" data-src="" alt=""><%= link_to p.heading, p %></div>
                <div class="card-body">
                  <p class="card-text"><%= p.title %><br><%= p.content %><br></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Show "+p.link, p %></button>
                    </div>
                    <small class="text-muted"><%= time_ago_in_words(p.updated_at) %></small>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
