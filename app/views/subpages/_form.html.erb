<%= form_with(model: subpage, local: true) do |form| %>
  <% if subpage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subpage.errors.count, "error") %> prohibited this subpage from being saved:</h2>

      <ul>
      <% subpage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user %>
    <% users_array = User.all.map { |user| [user.name, user.id] } %>
    <%= form.select(:user_id) do %>
    <%= options_for_select(users_array) %>
    <% end %>
  </div>
  
  <div class="field">
    <%= form.label :page %>
    <% pages_array = Page.all.map { |page| [page.link, page.id] } %>
    <%= form.select(:page_id) do %>
      <%= options_for_select(pages_array) %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :heading %>
    <%= form.text_area :heading %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
