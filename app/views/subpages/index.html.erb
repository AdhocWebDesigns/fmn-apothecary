<p id="notice"><%= notice %></p>

<h1>Subpages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Found in Pages</th>
      <th>Title</th>
      <th>Link</th>
      <th>Content</th>
      <th>Heading</th>
      <th>Articles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subpages.each do |subpage| %>
      <tr>
        <td><%= subpage.user.name %></td>
        <td>
            <%= Page.where(id: subpage.page_id).find_each do |p| %>
              <%= link_to p.title, p %></li>
            <% end %>
        </td>
        <td><%= subpage.title %></td>
        <td><%= link_to subpage.link, subpage %></td>
        <td><%= subpage.content %></td>
        <td><%= subpage.heading %></td>
        <td>
            <%= Article.where(subpage_id: subpage.id).find_each do |a| %>
              <%= link_to a.title, a %><br>
            <% end %>
        </td>
        <td><%= link_to 'Show', subpage %></td>
        <td><%= link_to 'Edit', edit_subpage_path(subpage) %></td>
        <td><%= link_to 'Destroy', subpage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

