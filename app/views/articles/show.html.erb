<%= render 'navigation/article' %>
<p>Link: <%= link_to @article.link, p %></p>
<h1><%= @article.title %></h1>
<h2><%= @article.heading %></h2>
<div align="center">	<% if @article.image.attachment != nil %>
		<%= image_tag(@article.image) %>
	<% end %>
</div>
<%= raw(@article.content) %>
<p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
<%= link_to 'New', new_article_path %>
</p>