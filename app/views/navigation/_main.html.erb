                <div class="dropdown-menu" aria-labelledby="<%= page.link %>">
                <% Subpage.where(page_id: page.id).find_each do |subpage| %>
                  <div class="dropdown-item"><%= link_to subpage.link, subpage %></div>
                <% end %>
                </div>
              </li>
          <% end %>
          </ul>
